@page "/"

<PageTitle>Home</PageTitle>

<h3 class="text-center">Welcome to HR Leave Management System</h3>
<hr />

<AuthorizeView>
    <Authorized>
        <button class="btn btn-danger" @onclick="LogoutAsync">Logout</button>
    </Authorized>
    <NotAuthorized>
        <button class="btn btn-success" @onclick="GoToLogin">Login</button>
        ||
        <button class="btn btn-primary" @onclick="GoToRegister">Register</button>
    </NotAuthorized>
</AuthorizeView>
