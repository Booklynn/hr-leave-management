@page "/register"
<PageTitle>Register</PageTitle>
<h1>Register</h1>
<hr />
@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-danger">
        @Message
    </div>
}

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@Model" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3 form-group">
                <label class="form-label">First Name</label>
                <InputText type="text" id="firstName" class="form-control" @bind-Value="@Model.FirstName"></InputText>
                <ValidationMessage For="@(() => Model.FirstName)" />
            </div>
            <div class="mb-3 form-group">
                <label class="form-label">Last Name</label>
                <InputText type="text" id="lastName" class="form-control" @bind-Value="@Model.LastName"></InputText>
                <ValidationMessage For="@(() => Model.LastName)" />
            </div>
            <div class="mb-3 form-group">
                <label class="form-label">User Name</label>
                <InputText type="text" id="userName" class="form-control" @bind-Value="@Model.UserName"></InputText>
                <ValidationMessage For="@(() => Model.UserName)" />
            </div>
            <div class="mb-3 form-group">
                <label class="form-label">Email</label>
                <InputText type="email" id="email" class="form-control" @bind-Value="@Model.Email"></InputText>
                <ValidationMessage For="@(() => Model.Email)" />
            </div>
            <div class="mb-3 form-group">
                <label class="form-label">Password</label>
                <InputText type="password" id="password" class="form-control" @bind-Value="@Model.Password"></InputText>
                <ValidationMessage For="@(() => Model.Password)" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>
